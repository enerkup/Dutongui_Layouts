mixin popular_video(v_source)
    video(src=v_source,autoplay,loop,muted="muted",playsinline,controlslist="nodownload")
        
mixin list(text,url)
    li
        a(href=url)=text

        
mixin square_media(social_icon,url)
    li
        a(href=url,target="_blank")
            i(class=social_icon)
        
mixin card_languages(imagen)
    .col-xs-12.col-sm-6
        .card
            .card__languages
                .card__languages__image
                    img(src=imagen)

mixin card_HowDoes(title,desc)
    .card
        .card__How
            .card__How__title
                h2= title
            .card__How__desc
                p= desc
                        
mixin card_WhyDutongui(title,desc,icon)
    .col-xs-12.col-sm-6
        .card
            .card__Why
                i(aria-hidden="true" class=icon)
                h3.card__Why__title= title
                p.card__Why__desc= desc  